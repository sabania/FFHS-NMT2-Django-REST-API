####run tensorflwo serving server###
tensorflow_model_server \
  --port=9000 \
  --model_name=var2 \
  --model_base_path=/home/ubuntu/models/var2
  
####### serve service with docker #####:
 docker run -d -p 8500:8500  -p 8501:8501\
  --mount type=bind,source=/home/ubuntu/models/var2,target=/models/var2 \
  -e MODEL_NAME=var2 -t tensorflow/serving
  
  
#### try this for mulitple models####
	docker run -d -p 8500:8500 -p 8501:8501 \
  --mount type=bind,source=/path/to/model1/,target=/models/model1 \
  --mount type=bind,source=/path/to/model2/,target=/models/model2 \
  --mount type=bind,source=/path/to/my/models.config,target=/models/models.config \
  -t tensorflow/serving --model_config_file=/models/models.config
  
  https://github.com/tensorflow/serving/issues/1077
  -----------------------------------------------
  model_config_list: {
  config: {
    name: "model1",
    base_path: "/models/model1",
    model_platform: "tensorflow"
  },
  config: {
    name: "model2",
    base_path: "/models/model2",
    model_platform: "tensorflow"
  }
}
