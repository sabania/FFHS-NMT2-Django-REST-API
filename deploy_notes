###install apache2#####
pip install apache2 apache2-dev

#### create virtual environment ####
#copy C:\Users\arben.sabani\Documents\Private\FFHS\Bachelor-Thesis\FS2019\Productiv\Tests\ffhs-nmt2.0\ffhs_nmt2 to /var/www
virtualenv -p /usr/bin/python3.5 venv #inside ffhs_nmt2 --> see: /var/www/ffhs_nmt
cd /var/www/ffhs_nmt2/venv
source bin/activate
pip install tensorflow tensor2tensor django django-rest-framwork coreapi pyyaml ipywidgets tensorflow-serving-api (install aslo corse packe, sie settings.py --> installed apps and other settings)

### install mod_wsgi####
cd
mkdir mod_wsgi
wget https://github.com/GrahamDumpleton/mod_wsgi/releases/tag/4.6.5
tar xvfz 4.6.5.tar.gz
cd mod_wsgi-4.6.5
./configure -with-python=/var/www/ffhs_nmt2/venv/bin/python3.5
sudo make
sudo make install

###configure apache###
sudo nano /etc/apache2/apache2.conf # add the following to the end:
                                       WSGIApplicationGroup %{GLOBAL}
                                       LoadModule wsgi_module /usr/lib/apache2/modules/mod_wsgi.so

sudo nano /etc/apache2/sites-available/000-default.conf

--------------------
VirtualHost *:80>
        # The ServerName directive sets the request scheme, hostname and port that
        # the server uses to identify itself. This is used when creating
        # redirection URLs. In the context of virtual hosts, the ServerName
        # specifies what hostname must appear in the request's Host: header to
        # match this virtual host. For the default virtual host (this file) this
        # value is not decisive as it is used as a last resort host regardless.
        # However, you must set it for any further virtual host explicitly.
        #ServerName www.example.com

        ServerAdmin webmaster@localhost
        DocumentRoot /var/www/html

        # Available loglevels: trace8, ..., trace1, debug, info, notice, warn,
        # error, crit, alert, emerg.
        # It is also possible to configure the loglevel for particular
        # modules, e.g.
        #LogLevel info ssl:warn

        ErrorLog ${APACHE_LOG_DIR}/error.log
        CustomLog ${APACHE_LOG_DIR}/access.log combined

        # For most configuration files from conf-available/, which are
        # enabled or disabled at a global level, it is possible to
        # include a line for only one particular virtual host. For example the
        # following line enables the CGI configuration for this host only
        # after it has been globally disabled with "a2disconf".
        #Include conf-available/serve-cgi-bin.conf
Alias /static /var/www/ffhs_nmt2/static
    <Directory /var/www/ffhs_nmt2/static>
        Require all granted
    </Directory>

        <Directory /var/www/ffhs_nmt2/venv>
        <Files wsgi.py>
            Require all granted
        </Files>
        </Directory>

    WSGIDaemonProcess ffhs_nmt python-path=/var/www/ffhs_nmt2 python-home=/var/www/ffhs_nmt2/venv
    WSGIProcessGroup ffhs_nmt
    WSGIScriptAlias / /var/www/ffhs_nmt2/ffhs_nmt2/wsgi.py

 </VirtualHost>
# vim: syntax=apache ts=4 sw=4 sts=4 sr noet


sudo chown :www-data /var/www/ffhs_nmt2

cd /var/www/ffhs_nmt2/
./manage.py collectstatic ##this should create a folder static, where javascrip and css will be stored, creaed: see /var/www/ffhs_nmt2/static

sudo service apache2 restart

